<h1><%= @article.title %></h1>

<p><%= @article.text %></p>
<hr>

<h2>Comments:</h2>

<% @article.comments.each do |comment| %>
<p>
<i><%= comment.autor %> said:</i><br />

<%= comment.body %>
  

</p>
<% end %>
<hr>

<h2>Add Comment</h2>

<%= form_for([@article,@article.comments.build])  do |f| %> 
  <p>
    <%= f.label :autor %>
     <%= f.text_field :autor %>   
  </p>
  <p>
    <%= f.label :body %>
     <%= f.text_area :body %>   
  </p>
  <p>
    <%= f.submit %>
  </p>

  <% end %>